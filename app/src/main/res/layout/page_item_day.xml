<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@drawable/list_iem_day_bg"
  >

  <TextView
    android:id="@+id/pageItemDay_title"
    android:layout_width="0dp"
    android:layout_height="64dp"
    android:background="@drawable/list_item_day_title_bg"
    android:fontFamily="@font/app_default"
    android:gravity="center"
    android:textColor="@color/text_dark"
    android:textSize="18sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:text="شنبه"
    />

  <androidx.recyclerview.widget.RecyclerView
    android:id="@+id/pageItemDay_list"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:clipToPadding="false"
    android:paddingTop="20dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/pageItemDay_title"
    />

</androidx.constraintlayout.widget.ConstraintLayout>