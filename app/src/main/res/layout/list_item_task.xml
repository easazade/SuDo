<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="70dp"
  >

  <androidx.appcompat.widget.AppCompatCheckBox
    android:id="@+id/listItemTask_status"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:buttonTint="@color/colorAccent"
    android:layout_marginStart="8dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    />

  <TextView
    android:id="@+id/listItemTask_description"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="16dp"
    android:layout_marginStart="8dp"
    android:ellipsize="end"
    android:fontFamily="@font/app_default"
    android:maxLines="1"
    android:textAlignment="viewStart"
    android:textColor="@color/text_medium"
    android:textSize="18sp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0"
    app:layout_constraintStart_toEndOf="@id/listItemTask_status"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias=".2"
    tools:text="this isa;lw dla ;lw d;la;lw d;l;alw d;lalwd ;l the sample description"
    />

  <TextView
    android:id="@+id/listItemTask_time"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:fontFamily="@font/app_default"
    android:textColor="@color/text_light"
    android:textSize="13sp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0"
    app:layout_constraintStart_toEndOf="@id/listItemTask_status"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias=".8"
    tools:text="18:06"
    />

</androidx.constraintlayout.widget.ConstraintLayout>